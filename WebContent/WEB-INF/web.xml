<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <!-- 注册  -->
  <servlet>
    <servlet-name>registerExample</servlet-name>
    <servlet-class>servlet.Register</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registerExample</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <!-- 登录  -->
  <servlet>
    <servlet-name>loginPage</servlet-name>
    <servlet-class>servlet.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginPage</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <!-- 注销 -->
  <servlet>
    <servlet-name>loginOut</servlet-name>
    <servlet-class>servlet.LoginOut</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginOut</servlet-name>
    <url-pattern>/loginOut</url-pattern>
  </servlet-mapping>
  <!-- 主页图书预览  -->
  <servlet>
    <servlet-name>indexPage</servlet-name>
    <servlet-class>servlet.BookIndex</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>indexPage</servlet-name>
    <url-pattern>/bookIndex</url-pattern>
  </servlet-mapping>
  <!-- 图书详情  -->
  <servlet>
    <servlet-name>getBookId</servlet-name>
    <servlet-class>servlet.BookId</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getBookId</servlet-name>
    <url-pattern>/bookId</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>bookDetailPage</servlet-name>
    <servlet-class>servlet.BookDetail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>bookDetailPage</servlet-name>
    <url-pattern>/bookDetail</url-pattern>
  </servlet-mapping>
  <!-- 购物车操作  -->
  <servlet>
    <servlet-name>all</servlet-name>
    <servlet-class>servlet.Cart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>all</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <!-- 得到UserId -->
  <servlet>
    <servlet-name>getUserId</servlet-name>
    <servlet-class>servlet.UserId</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getUserId</servlet-name>
    <url-pattern>/getUid</url-pattern>
  </servlet-mapping>
  <!-- 查看订单 -->
  <servlet>
    <servlet-name>getOrder</servlet-name>
    <servlet-class>servlet.Orders</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getOrder</servlet-name>
    <url-pattern>/allOrders</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>detailOrder</servlet-name>
    <servlet-class>servlet.Orders</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>detailOrder</servlet-name>
    <url-pattern>/detailOrder</url-pattern>
  </servlet-mapping>
</web-app>